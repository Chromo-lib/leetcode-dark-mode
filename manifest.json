{
  "manifest_version": 2,
  "name": "LeetCode dark mode",
  "description": "LeetCode dark mode.",
  "version": "1.0",
  "icons": {
    "512": "icons/icon512.png",
    "128": "icons/icon128.png",
    "64": "icons/icon64.png",
    "32": "icons/icon32.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.leetcode.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}